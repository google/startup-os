{
  "rules": {
    "eofline": true,
    "curly": true,
    "no-unused-variable": true,
    "max-line-length": [true, 79],
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "comment-format": [
      true,
      "check-space"
    ],
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "indent": [
      "true",
      "spaces",
      2
    ],
    "one-line": [
      true,
      "check-else"
    ]
  }
}
